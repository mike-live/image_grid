{
  "name": "Smart image grid",
  "version": "0.1.1.1",
  "manifest_version": 2,
  "minimum_chrome_version": "31",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "description": "Smart image grid powered by regexp",
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "permissions": [
    {"fileSystem": ["write", "retainEntries", "directory"]},
    "storage",
	"https://fonts.googleapis.com/"
	
  ],
  "file_handlers": {
    "text": {
      "types": [
          "text/*"
      ]
    },
	"image": {
      "types": [
        "image/png",
        "image/jpeg"
      ]
    }
  }
}