{
  "name": "Smart image grid",
  "version": "0.1",
  "manifest_version": 2,
  "minimum_chrome_version": "31",
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "permissions": [
    {"fileSystem": ["write", "retainEntries", "directory"]},
    "storage",
	"https://fonts.googleapis.com/"
	
  ],
  "file_handlers": {
    "text": {
      "types": [
          "text/*"
      ]
    },
	"image": {
      "types": [
        "image/png",
        "image/jpeg"
      ]
    }
  }
}